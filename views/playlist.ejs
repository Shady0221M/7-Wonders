    <div class="main">
        <div id="collectioni">
            <a id='Back' href="/home">Back</a> 
            <h2>Playlist</h2>
            <%if (locals.playlists){%>
                <%if (playlists.length>0){%>
                    <% playlists.forEach((playlist,index)=>{%>
                        <p><%=playlist.name%></p>
                        <div class="root">
                            <%var i,j,flag=false;%>
                            <%for(var j=0;j<playlist.song.length;j++){%>
                                <%console.log(playlist.song[j]);%>
                                <div class="card"  data-name="<%=playlist.song[j].id%>" data-src="<%=playlist.song[j].track_url%>"  onclick="playMusic('<%=playlist.song[j].id%>',this)">
                                    <%if (locals.likedSongs){%>
                                        <%for(var i=0;i<likedSongs.length;i++){%>
                                        <%if (playlist.song[j].id==likedSongs[i].song_id){%>
                                            <button id=<%=playlist.song[j].id%> class="likey"><img class="like" src='resources/icons/like_filled.png' onclick="do_like('<%=playlist.song[j].id%>')"></button>
                                            <%flag=true;console.log(playlist.song[j].id);%>
                                        <%}%>
                                        <%}%>
                                        <% if (!flag){%>
                                            <button id=<%=playlist.song[j].id%> class="likey"><img class="like" src='resources/icons/like_outline.png' onclick="do_like('<%=playlist.song[j].id%>')"></button>
                                            <%}%>
                                        <%flag=false%>
                                        <img class="avatar" src=<%=playlist.song[j].image_url%> alt="image_song" onload="imageLoaded(this)"/>
                                        <h2><%=playlist.song[j].name%></h2>
                                        <h4><%=playlist.song[j].artist_name%></h4>
                                        <h4><%=playlist.song[j].album_name%></h4>
                                    <%}%>
                                </div>
                            <%}%>
                        </div>

                    <%});%>
                <%}else{%>
                    <p class="errorMessage">No playlist found</p>
                <%}%>

            <%}else{%>
                <p class="errorMessage">No playlists found</p>
                <%}%> 
                
        </div>
    </div>
